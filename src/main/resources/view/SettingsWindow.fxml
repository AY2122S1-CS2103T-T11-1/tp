<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Settings" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@LightTheme.css" />
            </stylesheets>

            <VBox fx:id="container" prefHeight="400" prefWidth="1000">

                <HBox>
                    <Text fill="#fdb703" text="settings" translateX="8.0" translateY="-5.0">
                        <font>
                            <Font name="System Bold" size="40.0" />
                        </font>
                    </Text>
                    <Text fill="#377adf" text="window" translateX="8.0" translateY="-5.0">
                        <font>
                            <Font name="System Bold" size="40.0" />
                        </font>
                    </Text>
                </HBox>

                <HBox>
                    <Text fill="#779cff" text="Profile picture glow" textAlignment="CENTER" translateX="10.0">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font></Text>
                    <Pane prefHeight="54.0" prefWidth="59.0" HBox.hgrow="ALWAYS" />
                    <ColorPicker fx:id="glowColorPicker" translateX="-10.0" translateY="15.0" />
                </HBox>
                <Text fill="#e9afff" scaleZ="2.0" text="Restart required" translateX="10.0" translateY="-20.0">
                    <font>
                        <Font name="System Bold Italic" size="22.0" />
                    </font>
                </Text>

                <Button fx:id="doneButton" onAction="#hide" text="Done" translateX="467.0" translateY="200.0" />
            </VBox>
        </Scene>
    </scene>
</fx:root>
