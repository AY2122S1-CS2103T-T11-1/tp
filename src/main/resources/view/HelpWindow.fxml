                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Text>

                    <Text fill="#e9afff" text=" Example" translateX="4.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Text>

                    <Text style="-fx-fill: #779CFF;" text=" Add" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <font>
                     <Font name="System Bold" size="16.0" />
                  </font></Text>
                    <Text fx:id="addCommandExample" style="-fx-fill: #779CFF;" translateX="4.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
