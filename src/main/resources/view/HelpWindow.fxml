<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@LightTheme.css" />
                <URL value="@HelpWindow.css" />
                <URL value="@Fonts.css" />
            </stylesheets>
            <VBox fx:id="helpWindow" alignment="CENTER" prefHeight="800.0" prefWidth="1200.0">

                <HBox>
                    <Text fill="#fdb703" text="help" translateX="8.0" translateY="-5.0">
                        <font>
                            <Font name="System Bold" size="40.0" />
                        </font>
                    </Text>
                    <Text fill="#377adf" text="window" translateX="8.0" translateY="-5.0">
                        <font>
                            <Font name="System Bold" size="40.0" />
                        </font>
                    </Text>
                </HBox>

                <HBox alignment="CENTER">
                    <padding>
                        <Insets bottom="10" top="10" />
                    </padding>
                    <Text fx:id="helpMessage" fill="#e9afff" text="Label">
                        <font>
                            <Font name="System Bold Italic" size="18.0" />
                        </font>
                    </Text>
                    <Button mnemonicParsing="false" onAction="#openUserGuide" text="Open User Guide" translateX="10.0" translateY="-4">
                        <HBox.margin>
                            <Insets left="5.0" />
                        </HBox.margin>
                    </Button>
                </HBox>

                <GridPane gridLinesVisible="true" prefHeight="800.0" prefWidth="784.0">
                    <columnConstraints>
                        <ColumnConstraints fillWidth="false" hgrow="ALWAYS" maxWidth="392.0" />
                        <ColumnConstraints fillWidth="false" hgrow="ALWAYS" maxWidth="726.0" />
                        <ColumnConstraints fillWidth="false" hgrow="ALWAYS" maxWidth="240.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
